{
  "apiVersion": "v1",
  "kind": "Template",
  "labels": {
    "template": "teiid-salesforce-template"
  },
  "metadata": {
    "annotations": {
      "description": "Teiid virtualization of Salesforce",
      "iconClass": "icon-teiid",
      "tags": "java,database,jboss",
      "openshift.io/display-name": "Teiid Salesforce",
      "openshift.io/documentation-url": "http://teiid.jboss.org/docs/",
      "openshift.io/long-description": "This template provides a standalone Teiid server (a high performance, scalable, virtualization solution) providing access to Salesforce.",
      "openshift.io/provider-display-name": "Red Hat, Inc.",
      "openshift.io/support-url": "http://teiid.jboss.org/"
    },
    "name": "teiid-salesforce"
  },
  "objects": [
    {
      "kind": "ServiceAccount",
      "apiVersion": "v1",
      "metadata": {
      "name": "${APPLICATION_NAME}"
      }
    },
    {
      "kind": "RoleBinding",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}-view"
      },
      "userNames": [
        "system:serviceaccount:${NAMESPACE}:${APPLICATION_NAME}"
      ],
      "groupNames": null,
      "subjects": [
        {
          "kind": "ServiceAccount",
          "name": "${APPLICATION_NAME}"
        }
      ],
      "roleRef": {
        "name": "view"
      }
    },
    {
      "kind": "Secret",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "annotations": {
          "template.openshift.io/expose-username": "{.data['application-user']}",
          "template.openshift.io/expose-password": "{.data['application-password']}",
          "template.openshift.io/expose-database_name": "{.data['database-name']}"
        }
      },
      "stringData" : {
        "application-user": "${APPLICATION_USER}",
        "application-password": "${APPLICATION_PASSWORD}",
        "management-user": "${MANAGEMENT_USER}",
        "management-password": "${MANAGEMENT_PASSWORD}",
        "database_name": "${DATABASE_NAME}",
        "salesforce-user": "${SALESFORCE_USER}",
        "salesforce-password": "${SALESFORCE_PASSWORD}"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "template.openshift.io/expose-odata_url": "http://{.spec.clusterIP}:{.spec.ports[0].port}/odata4"
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-http"
      },
      "spec": {
        "ports": [
          {
            "name": "odata",
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "template.openshift.io/expose-mm_uri": "{.spec.clusterIP}:{.spec.ports[0].port}"
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-mm"
      },
      "spec": {
        "ports": [
          {
            "name": "mm",
            "port": 31000,
            "targetPort": 31000
          }
        ],
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "template.openshift.io/expose-pg_uri": "{.spec.clusterIP}:{.spec.ports[0].port}"
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-pg"
      },
      "spec": {
        "ports": [
          {
            "name": "pg",
            "port": 35432,
            "targetPort": 35432
          }
        ],
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "description": "The management console."
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-management"
      },
      "spec": {
        "ports": [
          {
            "name": "wildfly-management",
            "port": 9990,
            "targetPort": 9990
          }
        ],
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}-deployments",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "data": {
        "service-vdb.xml":"${vdb-xml}"
       }
    },
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}-configuration",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "data": {
        "standalone-teiid.xml":"${config-xml}"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "annotations": {
          "template.alpha.openshift.io/wait-for-ready": "true"
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}"
      },
      "spec": {
        "replicas": "1",
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        },
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 20,
            "intervalSeconds": 20,
            "timeoutSeconds": 1200,
            "maxUnavailable": 1,
            "maxSurge": 1
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "application": "${APPLICATION_NAME}",
              "deploymentConfig": "${APPLICATION_NAME}"
            },
            "name": "${APPLICATION_NAME}"
          },
          "spec": {
            "containers": [
              {
                "args": [
                  "custom/standalone-teiid.xml"
                ],
                "env": [
                  {
                    "name": "MGMT_USER",
                    "valueFrom": {
                        "secretKeyRef": {
                            "key": "management-user",
                            "name": "${APPLICATION_NAME}"
                        }
                    }
                  },
                  {
                    "name": "MGMT_PASS",
                    "valueFrom": {
                        "secretKeyRef": {
                            "key": "management-password",
                            "name": "${APPLICATION_NAME}"
                        }
                    }
                  },
                  {
                    "name": "APP_USER",
                    "valueFrom": {
                        "secretKeyRef": {
                            "key": "application-user",
                            "name": "${APPLICATION_NAME}"
                        }
                    }
                  },
                  {
                  	"name": "APP_ROLES",
                  	"value": "odata"
                  },
                  {
                    "name": "APP_PASS",
                    "valueFrom": {
                        "secretKeyRef": {
                            "key": "application-password",
                            "name": "${APPLICATION_NAME}"
                        }
                    }
                  },
                  {
                    "name": "SF_USER",
                    "valueFrom": {
                        "secretKeyRef": {
                            "key": "salesforce-user",
                            "name": "${APPLICATION_NAME}"
                        }
                    }
                  },
                  {
                    "name": "SF_PASS",
                    "valueFrom": {
                        "secretKeyRef": {
                            "key": "salesforce-password",
                            "name": "${APPLICATION_NAME}"
                        }
                    }
                  }
                ],
                "image": "teiid-server:${IMAGE_VERSION}",
                "livenessProbe": {
                  "exec": {
                    "command": [
                      "/usr/local/bin/is_running.sh", "${DATABASE_NAME}", "1.0.0"
                    ]
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 80,
                  "periodSeconds": 60,
                  "successThreshold": 1,
                  "failureThreshold": 5
                },
                "readinessProbe": {
                  "exec": {
                    "command": [
                      "/usr/local/bin/is_healthy.sh", "${DATABASE_NAME}", "1.0.0"
                    ]
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 80,
                  "periodSeconds": 60,
                  "successThreshold": 2,
                  "failureThreshold": 5
                },
                "resources": {
                  "limits": {
                    "memory": "${MEMORY_LIMIT}"
                  }
                },
                "name": "${APPLICATION_NAME}",
                "ports": [
                  {
                    "containerPort": 8080,
                    "name": "http",
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 9990,
                    "name": "management",
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 31000,
                    "name": "mm",
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 35432,
                    "name": "pg",
                    "protocol": "TCP"
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "${APPLICATION_NAME}-deployments",
                    "mountPath": "/opt/jboss/teiid-server/deployments"
                  },
                  {
                    "name": "${APPLICATION_NAME}-configuration",
                    "mountPath": "/opt/jboss/teiid-server/standalone/configuration/custom"
                  }
                ]
              }
            ],
            "terminationGracePeriodSeconds": 120,
            "serviceAccountName": "${APPLICATION_NAME}",
            "volumes": [
              {
                "name": "${APPLICATION_NAME}-deployments",
                "configMap": {
                  "name": "${APPLICATION_NAME}-deployments"
                }
              },
              {
                "name": "${APPLICATION_NAME}-configuration",
                "configMap": {
                  "name": "${APPLICATION_NAME}-configuration"
                }
              }
            ]
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${APPLICATION_NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "teiid-server:${IMAGE_VERSION}",
                "namespace": "${NAMESPACE}"
              },
              "lastTriggeredImage": ""
            }
          }
        ]
      }
    }
  ],
  "parameters": [
    {
       "description": "Maximum amount of memory the container can use.",
       "displayName": "Memory Limit",
       "name": "MEMORY_LIMIT",
       "required": true,
       "value": "512Mi"
    },
    {
      "description": "The OpenShift Namespace where the ImageStream resides.",
      "displayName": "Namespace",
      "name": "NAMESPACE",
      "value": "openshift"
    },
    {
      "description": "The name for the application.",
      "displayName": "Application Name",
      "name": "APPLICATION_NAME",
      "required": true,
      "value": "teiid-salesforce"
    },
    {
      "description": "The name of the Virtual Database",
      "displayName": "Database Name",
      "name": "DATABASE_NAME",
      "required": true,
      "value": "vdb"
    },
    {
      "description": "Username for accessing Salesforce",
      "displayName": "Salesforce Username",
      "name": "SALESFORCE_USER",
      "required": true
    },
    {
      "description": "Password for accessing Salesforce",
      "displayName": "Salesforce Password",
      "name": "SALESFORCE_PASSWORD",
      "required": true
    },
    {
      "description": "Username for accessing Teiid endpoints.",
      "displayName": "Teiid Username",
      "name": "APPLICATION_USER",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    },
    {
      "description": "Password for accessing Teiid endpoints.",
      "displayName": "Teiid Password",
      "name": "APPLICATION_PASSWORD",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    },
    {
      "description": "Username for accessing management console.",
      "displayName": "Management User",
      "name": "MANAGEMENT_USER",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    },
    {
      "description": "Password for accessing management console.",
      "displayName": "Management Password",
      "name": "MANAGEMENT_PASSWORD",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    },
    {
      "description": "Version of Teiid image to be used (10.0.0.Final, or latest)",
      "displayName": "Teiid Image Version",
      "name": "IMAGE_VERSION",
      "required": true,
      "value": "10.0.0.Final"
    }
  ]
}
