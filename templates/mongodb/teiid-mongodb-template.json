{
  "apiVersion": "v1",
  "kind": "Template",
  "labels": {
    "template": "teiid-mongodb"
  },
  "metadata": {
    "annotations": {
      "description": "Teiid 10 MongoDB as a Database",
      "iconClass": "icon-teiid",
      "tags": "java,database,jboss",
      "openshift.io/display-name": "Teiid MongoDB",
      "openshift.io/documentation-url": "http://teiid.jboss.org/docs/",
      "openshift.io/long-description": "This template provides a standalone Teiid server (a high performance, scalable, virtualization solution) providing access to MongoDB as a standard database.",
      "openshift.io/provider-display-name": "Red Hat, Inc.",
      "openshift.io/support-url": "http://teiid.jboss.org/"
    },
    "name": "teiid-mongodb"
  },
  "objects": [
    {
      "kind": "ServiceAccount",
      "apiVersion": "v1",
      "metadata": {
      "name": "${APPLICATION_NAME}"
      }
    },
    {
      "kind": "RoleBinding",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}-view"
      },
      "userNames": [
        "system:serviceaccount:${NAMESPACE}:${APPLICATION_NAME}"
      ],
      "groupNames": null,
      "subjects": [
        {
          "kind": "ServiceAccount",
          "name": "${APPLICATION_NAME}"
        }
      ],
      "roleRef": {
        "name": "view"
      }
    },
    {
      "kind": "Secret",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "annotations": {
          "template.openshift.io/expose-teiid.client.db.auth_username": "{.data['application-user']}",
          "template.openshift.io/expose-teiid.client.db.auth_password": "{.data['application-password']}"
        }
      },
      "stringData" : {
        "application-user": "${APPLICATION_USER}",
        "application-password": "${APPLICATION_PASSWORD}",
        "management-user": "${MANAGEMENT_USER}",
        "management-password": "${MANAGEMENT_PASSWORD}"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "description": "The web server's HTTP port."
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-http"
      },
      "spec": {
        "ports": [
          {
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "description": "JDBC port.",
          "template.openshift.io/expose-teiid.client.mm.url": "{.spec.clusterIP}:{.spec.ports[0].port}"
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-mm-jdbc"
      },
      "spec": {
        "ports": [
          {
            "port": 31000,
            "targetPort": 31000
          }
        ],
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "description": "PG port.",
          "template.openshift.io/expose-teiid.client.pg.url": "{.spec.clusterIP}:{.spec.ports[0].port}"
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-pg"
      },
      "spec": {
        "ports": [
          {
            "port": 35432,
            "targetPort": 35432
          }
        ],
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "description": "The management console."
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-management"
      },
      "spec": {
        "ports": [
          {
            "port": 9990,
            "targetPort": 9990
          }
        ],
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}-deployments",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "data": {
        "service-vdb.xml":"${vdb-xml}"
       }
    },
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}-configuration",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "data": {
        "standalone-teiid.xml":"${config-xml}",
        "application-roles.properties":"${APPLICATION_USER}=odata"
      }
    },
    {
      "apiVersion": "v1",
      "id": "${APPLICATION_NAME}-management",
      "kind": "Route",
      "metadata": {
        "annotations": {
          "description": "Route for the management console."
        },
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}-management"
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "${APPLICATION_NAME}-management"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "name": "${APPLICATION_NAME}"
      },
      "spec": {
        "replicas": "${{NUMBER_OF_INSTANCES}}",
        "selector": {
          "deploymentConfig": "${APPLICATION_NAME}"
        },
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 20,
            "intervalSeconds": 20,
            "timeoutSeconds": 1200,
            "maxUnavailable": 1,
            "maxSurge": 1
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "application": "${APPLICATION_NAME}",
              "deploymentConfig": "${APPLICATION_NAME}"
            },
            "name": "${APPLICATION_NAME}"
          },
          "spec": {
            "containers": [
              {
                "args": [
                  "custom/standalone-teiid.xml"
                ],
                "env": [
                  {
                    "name": "OPENSHIFT_KUBE_PING_LABELS",
                    "value": "application=${APPLICATION_NAME}"
                  },
                  {
                    "name": "OPENSHIFT_KUBE_PING_NAMESPACE",
                    "valueFrom": {
                      "fieldRef": {
                        "fieldPath": "metadata.namespace"
                      }
                    }
                  },
                  {
                    "name": "KUBERNETES_LABELS",
                    "value": "application=${APPLICATION_NAME}"
                  },
                  {
                    "name": "KUBERNETES_NAMESPACE",
                    "valueFrom": {
                      "fieldRef": {
                        "fieldPath": "metadata.namespace"
                      }
                    }
                  },
                  {
                    "name": "MGMT_USER",
                    "value": "${MANAGEMENT_USER}"
                  },
                  {
                    "name": "MGMT_PASS",
                    "value": "${MANAGEMENT_PASSWORD}"
                  },
                  {
                    "name": "APP_USER",
                    "value": "${APPLICATION_USER}"
                  },
                  {
                    "name": "APP_PASS",
                    "value": "${APPLICATION_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_DATABASE",
                    "value": "${MONGODB_DATABASE}"
                  }
                ],
                "image": "${IMAGE}",
                "livenessProbe": {
                  "exec": {
                    "command": [
                      "/usr/local/bin/is_running.sh"
                    ]
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 80,
                  "periodSeconds": 60,
                  "successThreshold": 1,
                  "failureThreshold": 5
                },
                "readinessProbe": {
                  "exec": {
                    "command": [
                      "/usr/local/bin/is_healthy.sh", "vdb", "1.0.0"
                    ]
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 80,
                  "periodSeconds": 60,
                  "successThreshold": 2,
                  "failureThreshold": 5
                },
                "name": "${APPLICATION_NAME}",
                "ports": [
                  {
                    "containerPort": 8080,
                    "name": "http",
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 9990,
                    "name": "management",
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 31000,
                    "name": "mm",
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 35432,
                    "name": "pg",
                    "protocol": "TCP"
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "${APPLICATION_NAME}-deployments",
                    "mountPath": "/opt/jboss/teiid-server/deployments"
                  },
                  {
                    "name": "${APPLICATION_NAME}-configuration",
                    "mountPath": "/opt/jboss/teiid-server/standalone/configuration/custom"
                  }
                ],
                "resources": {
                  "requests": {
                    "cpu": "0.5",
                    "memory": "512Mi"
                  }
                }
              }
            ],
            "terminationGracePeriodSeconds": 120,
            "serviceAccountName": "${APPLICATION_NAME}",
            "volumes": [
              {
                "name": "${APPLICATION_NAME}-deployments",
                "configMap": {
                  "name": "${APPLICATION_NAME}-deployments"
                }
              },
              {
                "name": "${APPLICATION_NAME}-configuration",
                "configMap": {
                  "name": "${APPLICATION_NAME}-configuration"
                }
              }
            ]
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ]
      }
    }
  ],
  "parameters": [
    {
      "description": "Namespace for the application. Note: The namespace is required for creating proper RoleBindings. Specifying wrong namespace will prevent cluster from forming.",
      "name": "NAMESPACE",
      "required": true,
      "value": "myproject"
    },
    {
      "description": "MongoDB Database Name",
      "name": "MONGODB_DATABASE",
      "required": true,
      "value": "sampledb"
    },
    {
      "description": "The name for the application.",
      "name": "APPLICATION_NAME",
      "required": true,
      "value": "teiid-mongodb"
    },
    {
      "description": "Username for accessing Teiid endpoints.",
      "name": "APPLICATION_USER",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    },
    {
      "description": "Password for accessing Teiid endpoints.",
      "name": "APPLICATION_PASSWORD",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    },
    {
      "description": "Username for accessing management console.",
      "name": "MANAGEMENT_USER",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    },
    {
      "description": "Password for accessing management console.",
      "name": "MANAGEMENT_PASSWORD",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    },
    {
      "description": "Teiid image.",
      "name": "IMAGE",
      "required": true,
      "value": "teiid-server:10.0.0.Final"
    },
    {
      "description": "Number of instances in the cluster.",
      "name": "NUMBER_OF_INSTANCES",
      "required": true,
      "value": "1"
    }
  ]
}
